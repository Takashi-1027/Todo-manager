<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h5> ラベル一覧 <h5>
      <!--#タグリスト-->
      <% @label_list.each do |list| %>
        <span>
          <%= link_to list.label_name, label_tasks_path(list.id) %>
          <%= "(#{list.tasks.count})" %>
        </span>
      <% end %>
      <br>
      <br>
      <!--#タグによって絞り込んだ投稿一覧-->
      <%#= "タグが ─ "%>
      <%= @label.label_name %>
      <%#= " ─ の投稿一覧" %>
      <br>
      <% @tasks.each do |task| %>
        <%= link_to task.title, task %>
      <% end %>
    </div>
  </div>
</div>