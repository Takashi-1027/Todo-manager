<div class="title">
  <h4>ユーザー一覧画面</h4>
</div>
<div class="container">
  <div scope="row">
    <div class="offset-md-2 col-md-8">
      <table class="table table-hover table-resposive ">
        <div class="users">
          <thead class="thead-color">
            <tr>
              <td></td>
              <td>名前</td>
              <td>紹介文</td>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, fallback: "person01.jpg", size:"50x50"%></td>
                <td style="white-space:nowrap;"><%= link_to user.name, user_path(user.id) %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
        </div>
      </table>
    </div>
  </div>
</div>
